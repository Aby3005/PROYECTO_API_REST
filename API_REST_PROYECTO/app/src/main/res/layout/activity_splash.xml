<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF03DAC5">

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="BIENVENIDOS A NUESTRO PROYECTO API-REST"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:gravity="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/splash_logo" />

    <TextView
        android:id="@+id/splash_subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="GABRIELA SARAÍ PACHECO"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/splash_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_subtitle1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="FRANCISCA ABIGAIL GARCÍA"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp" />

</RelativeLayout>